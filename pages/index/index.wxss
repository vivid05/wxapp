/* pages/play/play.wxss */
swiper-item image{
  width: 100%;
  height: 100%;
}
.sort{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 20px;
}
.sort_item{
  width: 300rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;  
  border-radius: 30px;
  font-size: 20px;
  color: #fff;
}
.red{
  color: red;
}
.green{
  color: green;
}
.getUserInfo{
  position: fixed;
  display: flex;
  width: 100%;
  justify-content: space-around;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background: orange;
}
.getUserInfo text{
  color: white;
}
.getUserInfo button{
  line-height: 50rpx;
}